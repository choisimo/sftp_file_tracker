# 로컬 파일 모니터링 설정

# 모니터링할 로컬 디렉토리
MONITOR_DIR=./watch
# 현재 디렉토리: MONITOR_DIR=.
# 특정 폴더: MONITOR_DIR=/path/to/your/folder

# 웹훅 설정
WEBHOOK_URL=https://n8n.nodove.com/webhook/nas/detect/new

# 로깅 설정
LOG_LEVEL=info
LOG_FILE_PATH=./logs/file-monitor.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# 캐시 파일
CACHE_FILE_PATH=./data/known_files.json

# 재시도 설정
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# 초기 파일 무시 설정
# true: 시작시 기존 파일들은 무시하고 새로운 파일만 감지
# false: 시작시 기존 파일들도 감지하여 알림 전송
IGNORE_INITIAL_FILES=true

# 기존 파일 스캔 설정
# true: 시작시 기존 파일들을 스캔하여 캐시에 저장 (중복 방지용)
# false: 기존 파일 스캔하지 않음
SCAN_EXISTING=true